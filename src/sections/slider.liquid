<div class="container-fluid">
  <div class="row">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      {% if section.blocks.size >= 2 %}
      <ol class="carousel-indicators">
        {% assign num = -1 %}
        {% for block in section.blocks %}
{% assign num = num | plus: 1 %}
          <li data-target="#myCarousel" data-slide-to="{{ num }}" class="{% if forloop.first == true %}active{% endif %}"></li>
        {% endfor %}
      </ol>
      {% endif %}
  
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
{% for block in section.blocks %}
        <div class="item {% if forloop.first == true %}active{% endif %}">
          <img src="{{ block.settings.image | img_url: 'x600' }}" alt=" " style="width:100%;">
          <div class="carousel-caption">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.subheading }}</p>
            <p><a href="{{ block.settings.link }}">{{ block.settings.linklabel }}</a></p>
          </div>
        </div>
    {% endfor %}
      </div>
  
  {% if section.blocks.size >= 2 %}
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
      {% endif %}

    </div>
    
  </div>    
</div>

{% if section.blocks.size == 0 %}
  <h4>No Slider Found</h4>
{% endif %}
{% schema %}
  {
    "name": "BootstrapSlider",
    "max_blocks": 4,
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Slide"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Sub Heading",
            "default": "View all products"
          },
          {
            "type": "text",
            "id": "linklabel",
            "label": "Link Label",
            "default": "View all products"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Slide link"
          }
        ]
      }
    ],
        "presets": [
          {
            "name": "Bootstrap Slider"
          }
        ]
  }
{% endschema %}